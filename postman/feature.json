                      "",
                      "setTimeout(async () => ",
                      "    {",
                      "        try {",
                      "            await main();",
                      "        } catch (e) {",
                      "            console.error(e);",
                      "        } finally {",
                      "            clearInterval(interval);",
                      "        }",
